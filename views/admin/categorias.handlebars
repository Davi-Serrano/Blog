<h2>Lista de categoiras</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
        <div class="card mt-4">
            <div class="card-body">
                <h4>{{nome}}</h4>
                <small>{{slug}}</small>
                <br>
            <a href="/admin/categorias/edit/{{_id}}"> <div class="btn btn-success mt-4">Editar categoria</div></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2"> Deletar categoria</button>
            </form>
            </div>
        </div>
{{else}}

{{/each}}